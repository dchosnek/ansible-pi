[global]
   security = user
   map to guest = Bad User
   guest account = nobody

[scanner]
   comment = files from scanner
   path = {{ samba_path }}
   read only = no
   guest ok = yes
   browseable = yes
   create mask = 0777
   directory mask = 0777

[public]
   comment = locally public network share
   path = {{ public_share_path }}
   read only = no
   guest ok = yes
   browseable = yes
   create mask = 0777
   directory mask = 0777
